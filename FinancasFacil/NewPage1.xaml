<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancasFacil.NewPage1"
             Title="NewPage1">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Image
            Source="logo.jpg"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a race car number eight" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label x:Name="NomeAcao" Grid.Row="0" Grid.Column="0" Text="" />
                <Label Grid.Row="0" Grid.Column="1" Text="Playstation 5" />
                <Label Grid.Row="0" Grid.Column="2" Text="Preço:" />
                <Label Grid.Row="0" Grid.Column="3" Text="R$ 3.781,00" />

                <Label Grid.Row="1" Grid.Column="0" Text="Produto:" />
                <Label Grid.Row="1" Grid.Column="1" Text="Xbox Series S" />
                <Label Grid.Row="1" Grid.Column="2" Text="Preço:" />
                <Label Grid.Row="1" Grid.Column="3" Text="R$ 2.192,00" />

                <Label Grid.Row="2" Grid.Column="0" Text="Produto:" />
                <Label Grid.Row="2" Grid.Column="1" Text="Xbox Series X" />
                <Label Grid.Row="2" Grid.Column="2" Text="Preço:" />
                <Label Grid.Row="2" Grid.Column="3" Text="R$ 3.722,00" />
            </Grid>
            
            <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>